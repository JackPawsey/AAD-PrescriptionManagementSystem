@page
@model AADWebApp.Areas.GeneralPractitioner.Pages.PatientSearch
@{
    ViewData["Title"] = "Patient Search";
    Layout = "~/Areas/GeneralPractitioner/Pages/_GeneralPractitionerLayout.cshtml";
}

<h1 class="mb-5">Patient Search</h1>

<h3 class="mb-5">Search</h3>
<div id=" Search" class="form-group form-inline mb-5">
    <form class="form-inline">
        <div class="form-group">
            <label class=" control-label ml-3"><b>ID</b></label>
            <input type="text" class="form-control ml-5 " placeholder="ID" />
        </div>
        <div class="form-group">
            <label class=" control-label ml-3"><b>First Name</b></label>
            <input type="text" class="form-control ml-5 " placeholder="First Name" />
        </div>
        <div class="form-group">
            <label class=" control-label ml-3 "><b>Last Name</b></label>
            <input type="text" class="form-control ml-5 " placeholder="Last Name" />
        </div>



        <button class="input-group-addon btn btn-primary float-right ml-5">Search</button>
    </form>


</div>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Patient ID</th>
            <th scope="col"> First Name</th>
            <th scope="col"> Last Name</th>
            <th scope="col">Medication ID</th>
            <th scope="col">Medication Name</th>
            <th scope="col">Medication Start</th>
            <th scope="col">Medication End</th>
            <th scope="col">Medication Status</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < 6; i++)
        {
            <tr data-toggle="modal" data-target="#EnterResults">
                <th scope="row">@(i+1)</th>
                <td>Text</td>
                <td>Text</td>
                <td>Text</td>
                <td>
                    Text
                </td>

                <td>
                    Text
                </td>
                <td>
                    <div id="DateStart">
                        <input type="date" class="form-control-sm" name="Medication Start" id="Medication Start" />
                    </div>
                </td>
                <td>
                    <div id="DateEnd">
                        <input type="date" class="form-control-sm" name="Medication End" id="Medication End" />
                    </div>
                </td>
                <td>
                    Text
                </td>
            </tr>
        }
    </tbody>
</table>

<!--Modal-->
<div class=" modal fade" tabindex="-1" id="EnterResults">
    <div class=" modal-dialog" role="form">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalTitle"> Enter Results</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <!--CHECK WHAT IS MEANT BY ID IN THIS CASE/// Patient ID for now-->
                    <label for="bloodTestID" class="mt-3">Blood Test ID</label>
                    <input type="number" class="form-control col-sm-5" id="bloodTestID" placeholder="Enter Blood Test ID">
                </div>
                <div class="form-group">
                    <h5>Result</h5>

                    <div class="form-check form-check-inline">
                        <input type="radio" name="Result" class="form-check-input col-sm-4 mt-3" id="Positive">
                        <label class="form-check-label mt-3" for="Positive">Positive</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input type="radio" name="Result" class="form-check-input col-sm-4 mt-3 ml-3" id="Negative">
                        <label class="form-check-label mt-3" for="Negative">Negative</label>
                    </div>
                    <div class="form-group">
                        <h5 class="mt-3"> Result Date and Time</h5>
                        <div class="form-check-inline mt-2">
                            <h6 class="ml-3">Date</h6>
                            <input type="date" name="resultDate" class="form-control col-sm-4 ml-4">
                            <h6 class="ml-3"> Time</h6>
                            <input type="time" name="resultTime" class="form-control col-sm-4 ml-4">
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-primary float-right">Confirm</button>
                </div>
            </div>
        </div>
    </div>
</div>

