@page
@model AADWebApp.Areas.GeneralPractitioner.Pages.RequestPrescriptionModel
@{
    ViewData["Title"] = "Request Prescription";
    Layout = "~/Areas/GeneralPractitioner/Pages/_GeneralPractitionerLayout.cshtml";
}

<h1 class="mb-5">Request Prescription</h1>

<h3 class="mb-5">Search</h3>
<div id=" Search" class="form-group form-inline mb-5">
    <form class="form-inline">
        <div class="form-group">
            <label class=" control-label ml-3"><b>ID</b></label>
            <input type="text" class="form-control ml-5 " placeholder="Medication ID" />
        </div>
        <div class="form-group">
            <label class=" control-label ml-4"><b>Medicine</b></label>
            <input type="text" class="form-control ml-5 " placeholder="Medication Name" />
        </div>
        <div class="form-group">
            <label class=" control-label ml-5 "><b>Restriction</b></label>
            <div class="form-group ml-5">
                <select class="custom-select">
                    <option selected> Restriction Level</option>
                    @for (int x = 0; x < 4; x++)
                    {
                        <option> @(x)</option>
                    }

                </select>
            </div>
        </div>



        <button class="input-group-addon btn btn-primary float-right ml-5">Search</button>
    </form>


</div>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Medication ID</th>
            <th scope="col">Medication Name</th>
            <th scope="col">Restriction Level</th>
            <th scope="col">Prescription Start</th>
            <th scope="col">Prescription End</th>
            <th scope="col">Dosage</th>
            <th scope="col">Select</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < 6; i++)
        {
        <tr>
            <th scope="row">@(i+1)</th>
            <td>Text</td>
            <td>Text</td>
            <td>
                <div class="form-group">
                    <select class="custom-select">
                        <option selected> Restriction Level</option>
                        @for (int j = 0; j < 4; j++)
                        {
                            <option> @(j)</option>
                        }

                    </select>
                </div>
            </td>
            <td>
                <div id="DateStart">
                    <input type="date" class="form-control-sm" name="Prescription Start" id="Prescription Start" />
                </div>
            </td>

            <td>
                <div id="DateEnd">
                    <input type="date" class="form-control-sm" name="Prescription End" id="Prescription End" />
                </div>
            </td>
            <td>Text</td>
            <td>
                <div id="CheckBox" class="form-check">
                    <input type="checkbox" name="Status" value="Choose" class="form-check-input" id="Select@(i+1)" />
                    <label for="Select@(i+1)">
                        Select
                    </label>
                </div>
            </td>
        </tr>
        }
    </tbody>
</table>

<!--Modal-->
<div class=" modal fade" tabindex="-1" id="ChoosePatient">
    <div class=" modal-dialog" role="form">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalTitle"> Choose Patient</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Patient ID</th>
                                <th scope="col"> First Name</th>
                                <th scope="col"> Last Name</th>
                                <th scope="col">Select</th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (int i = 0; i < 8; i++)
                            {
                                <tr>
                                    <th scope="row">@(i+1)</th>
                                    <td>Text</td>
                                    <td>Text</td>
                                    <td>Text</td>
                                    <td>
                                        <div id="CheckBox" class="form-check-input mt-0">
                                            <input type="radio" name="Status" value="Select" class="form-check-input" id="SelectPatient@(i+1)" />
                                            <label for="SelectPatient@(i+1)">
                                                Select
                                            </label>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger float-left" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary float-right">Confirm</button>
            </div>
        </div>
    </div>
</div>

<button data-toggle="modal" data-target="#ChoosePatient" class="btn btn-primary float-right">Confirm</button>