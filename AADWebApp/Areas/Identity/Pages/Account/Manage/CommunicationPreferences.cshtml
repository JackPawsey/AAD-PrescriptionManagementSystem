@page
@model CommunicationPreferencesModel
@{
    ViewData["Title"] = "Communication Preferences";
    ViewData["ActivePage"] = ManageNavPages.CommunicationPreferences;
}

<h4>@ViewData["Title"]</h4>
<partial name="_StatusMessage" model="Model.StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="email-form" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CommunicationPreference"></label>
                <input asp-for="CommunicationPreference" class="form-control" disabled />
            </div>
            <div class="form-group">
                <label asp-for="Input.NewCommunicationPreference" class="control-label"></label>
                <select asp-for="Input.NewCommunicationPreference" class="form-control" asp-items="@Model.CommunicationPreferences">
                    <option value="">Select an option</option>
                </select>
                <span asp-validation-for="Input.NewCommunicationPreference" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Change communication preference</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}