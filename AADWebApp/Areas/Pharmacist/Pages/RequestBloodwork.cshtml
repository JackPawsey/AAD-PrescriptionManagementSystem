@page
@model AADWebApp.Areas.Pharmacist.Pages.RequestBloodworkModel
@{
    ViewData["Title"] = "Request Bloodwork";
    Layout = "~/Areas/Pharmacist/Pages/_PharmacistLayout.cshtml";
}

<h1 class="mb-5">Request Bloodwork</h1>

<h3 class="mb-5">Search</h3>
<div id=" Search row 2" class="form-group form-inline mb-5">
    <form class="form-inline">
        <div class="form-group">
            <label class=" control-label ml-3"><b>ID</b></label>
            <input type="text" class="form-control ml-5 " placeholder="ID" />
        </div>
        <div class="form-group">
            <label class=" control-label ml-3"><b>First Name</b></label>
            <input type="text" class="form-control ml-5 " placeholder="First Name" />
        </div>
        <div class="form-group">
            <label class=" control-label ml-3 "><b>Last Name</b></label>
            <input type="text" class="form-control ml-5 " placeholder="Last Name" />
        </div>
    </form>

    <div id=" Search row 2" class="form-group form-inline mb-5 mt-5">
        <form class="form-inline">
            <div class="form-group">
                <label class=" control-label ml-3"><b>DoB</b></label>
                <input type="text" class="form-control ml-5 " placeholder="Date of Birth" />
            </div>
            <div class="form-group">
                <label class=" control-label ml-5"><b>GP</b></label>
                <input type="text" class="form-control ml-5" placeholder="First Name" />
            </div>

        </form>


    </div>

</div>
<button class="input-group-addon btn btn-primary float-right mb-3">Search</button>

<table class="table table-hover table-striped">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Patient ID</th>
            <th scope="col"> First Name</th>
            <th scope="col"> Last Name</th>
            <th scope="col">Date of Birth</th>
            <th scope="col">GP</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < 8; i++)
        {
        <tr data-toggle="modal" data-target="#RequestBloodWork">
            <th scope="row">@(i+1)</th>
            <td>Text</td>
            <td>Text</td>
            <td>Text</td>
            <td>
                <div id="DoB">
                    <input type="date" class="form-control-sm" name="DoB" id="DoB" />
                </div>
            </td>
            <td>Text</td>
        </tr>
        }
    </tbody>
</table>

<!--Modal-->
<div class=" modal fade" tabindex="-1" id="RequestBloodWork">
    <div class=" modal-dialog" role="form">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalTitle"> Request Blood Work</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label for="inputID" class="mt-3">Prescription ID</label>
                    <!--CHECK WHAT IS MEANT BY ID IN THIS CASE/// Patient ID for now-->
                    <input type="number" class="form-control col-sm-5" id="inputID" placeholder="Enter Prescription ID">
                    <div class="form-group">
                        <label for="bloodTestID" class="mt-3">Blood Test ID</label>
                        <input type="number" class="form-control col-sm-5" id="bloodTestID" placeholder="Enter Blood Test ID">
                    </div>
                    <div class="form-group">
                        <h5>Test</h5>
                        <select class="custom-select col-5">
                            <option selected> Choose Test</option>
                            <option> </option>
                        </select>
                        <div class="form-group">
                            <h5 class="mt-3"> Test Date and Time</h5>
                            <div class="form-check-inline mt-2">
                                <h6 class="ml-3">Date</h6>
                                <input type="date" name="resultDate" class="form-control col-sm-4 ml-4">
                                <h6 class="ml-3"> Time</h6>
                                <input type="time" name="resultTime" class="form-control col-sm-4 ml-4">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger float-left" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary float-right">Confirm</button>
            </div>
        </div>
    </div>
</div>