@page
@using AADWebApp.Areas.Identity.Data
@using Microsoft.AspNetCore.Identity
@model IndexModel

@{
    ViewData["Title"] = "Home page";
}


<div class="container mt-5">
    <div id="Carousel" class="carousel slide bg-dark" data-ride="carousel">
        <div class="carousel-inner">
            <div id="Indicators">
                <ol class="carousel-indicators">
                    <li data-target="#Carousel" data-slide-to="0" class="active"></li>
                    <li data-target="#Carousel" data-slide-to="1" class="active"></li>
                    <li data-target="#Carousel" data-slide-to="2" class="active"></li>
                </ol>


            </div>
            <div class="carousel-item active">
                <img class="d-block w-100" src="~/lib/Images/femaleDoctor.png">
                <div class="carousel-caption d-none d-md-block">
                    <h1 class="display-4" style="color:black">Welcome to Prescription Management by Cloud Crusaders!</h1>
                    <h3 class="display-6" style="color:black">Click Login or Register to begin</h3>
                </div>
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="~/lib/Images/emptyPharmacy.png">
                <div class="carousel-caption d-none d-md-block">
                    <h1 class="display-4" style="color:black">Schedule your Prescription Collection today!</h1>
                </div>
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="~/lib/Images/Pharmacist.png">
                <div class="carousel-caption d-none d-md-block">
                    <h1 class="display-4">Get your Prescriptions approved by your local Pharmacy!</h1>
                </div>
            </div>
        </div>
        <a class="carousel-control-prev" href="#Carousel" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#Carousel" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>

    </div>
</div>

<div class="card-deck mt-5 mb-5">
    <div class="card ml-5">
        <img class="card-img-top" src="~/lib/Images/Prescription.png">
        <div class="card-body">
            <a class="text-dark" asp-area="Identity" asp-page="/Account/Register">
                <h5 class="card-title"> <b>Need a Prescription?</b></h5>
            </a>
            <p class="card-text">Get your Prescriptions approved Online.</p>
        </div>
    </div>
    <div class="card ml-5">
        <img class="card-img-top" src="~/lib/Images/Email.png">
        <div class="card-body">
            <a class="text-dark" asp-area="Identity" asp-page="/Account/Register">
                <h5 class="card-title"><b> Be Notified</b></h5>
            </a>
            <p class="card-text">Get notified anyway you want. Through SMS or email.</p>
        </div>
    </div>
    <div class="card ml-5">
        <img class="card-img-top" src="~/lib/Images/Jab.png">
        <div class="card-body">
            <a class="text-dark" asp-area="Identity" asp-page="/Account/Register">
                <h5 class="card-title"><b>Need a Blood Test?</b></h5>
            </a>
            <p class="card-text">No problem!! Your local Pharmacist will request one if necessary.</p>
        </div>
    </div>
</div>