@page
@model AADWebApp.Areas.Admin.Pages.CreateRoleModel
@{
    ViewData["Title"] = "Create Role";
    Layout = "~/Areas/Admin/Pages/_AdminLayout.cshtml";
}

<h1>Create Role</h1>

<div class="col-md-10 offset-md-1">
    <section>
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.RoleName"></label>
                <input asp-for="Input.RoleName" class="form-control" />
                <span asp-validation-for="Input.RoleName" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary btn-block">Create Role</button>
        </form>
    </section>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}