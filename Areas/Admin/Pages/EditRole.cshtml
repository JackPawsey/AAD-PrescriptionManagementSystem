@page
@model AADWebApp.Areas.Admin.Pages.EditRoleModel
@{
    ViewData["Title"] = "Edit Role";
    Layout = "~/Areas/Admin/Pages/_AdminLayout.cshtml";
}

<h1>Edit Role</h1>
<form method="post" class="mt-3">
    <div class="form-group row">
        <label asp-for="roleModel.Id" class="col-sm-3 col-form-label"></label>
        <div class="col-sm-9">
            <input asp-for="roleModel.Id" disabled class="form-control">
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="roleModel.RoleName" class="col-sm-3 col-form-label"></label>
        <div class="col-sm-9">
            <input asp-for="roleModel.RoleName" class="form-control">
            <span asp-validation-for="roleModel.RoleName" class="text-danger"></span>
        </div>
    </div>

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group row">
        <div class="col-md-6">
            <a class="btn btn-danger w-100" asp-area="Admin" asp-page="/ListRoles">Cancel</a>
        </div>
        <div class="col-md-6">
            <button type="submit" class="btn btn-success w-100">Update</button>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <h3>Users in this role:</h3>
        </div>
        <div class="card-body">
            @if (Model.roleModel.Users.Any())
            {
                <table class="table">
                    @foreach (var user in Model.roleModel.Users)
                    {
                        <tr>
                            <th>User Name</th>
                            <td>@user</td>
                        </tr>
                    }
                </table>
            }
            else
            {
                <h5 class="card-title">No Users</h5>
            }
        </div>
        <div class="card-footer">
            <a class="btn btn-primary" style="width:auto" asp-area="Admin" asp-page="/EditRoleUsers" asp-route-id="@Model.roleModel.Id">Add or Remove Users</a>
        </div>
    </div>
</form>