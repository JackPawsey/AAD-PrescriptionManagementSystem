@page
@model AADWebApp.Areas.Admin.Pages.EditRoleModel
@{
    ViewData["Title"] = "Edit Role";
    Layout = "~/Areas/Identity/Pages/_AuthLayout.cshtml";
}

<h1>Edit Role</h1>

<form method="post" class="mt-3">
    <div class="form-group row">
        <label asp-for="roleModel.Id" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="roleModel.Id" disabled class="form-control">
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="roleModel.RoleName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="roleModel.RoleName" class="form-control">
            <span asp-validation-for="roleModel.RoleName" class="text-danger"></span>
        </div>
    </div>

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary" style="width:auto">Update</button>
            <a class="btn btn-primary" style="width:auto" asp-area="Admin" asp-page="/ListRoles">Cancel</a>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <h3>Users in this role:</h3>
        </div>
        <div class="card-body">
            @if (Model.roleModel.Users.Any())
            {
                foreach (var user in Model.roleModel.Users)
                {
                    <h5 class="card-title">User Name : @user</h5>
                }
            }
            else
            {
                <h5 class="card-title">No Users</h5>
            }
        </div>
        <div class="card-footer">
            <a class="btn btn-primary" style="width:auto" asp-area="Admin" asp-page="/EditRoleUsers"  asp-route-id="@Model.roleModel.Id">Add or Remove Users</a>
        </div>
    </div>
</form>